<MudPaper Width="250px" Elevation="0" Class="py-3">
	<MudNavMenu Bordered="true" Color="@Color.Primary">
		<MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.TwoTone.Home">Accueil</MudNavLink>
		<MudNavLink Href="/mes-demandes" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.History">Mes demandes</MudNavLink>
		<MudNavGroup Title="Services" Icon="@Icons.Material.TwoTone.DesignServices" @bind-Expanded=_expandedServiceMenu>
			<MudNavLink Href="Services/aux-etrangers" Icon="@Icons.Material.TwoTone.Contacts">Aux étrangers</MudNavLink>
			<MudNavLink Href="Services/aux-centrafricains" Icon="@Icons.Material.TwoTone.ContactMail">Aux Centrafricains</MudNavLink>
		</MudNavGroup>
	</MudNavMenu>
</MudPaper>
<MudSpacer/>
<MudPaper Width="250px" Elevation="0" Class="py-3">
	<MudNavMenu Bordered="true" Color="@Color.Primary">
		<AuthorizeView>
			<Authorized>
				<MudNavLink Href="Account/Manage" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.List">@context.User.Identity?.Name</MudNavLink>
			</Authorized>
            <NotAuthorized>
                <MudNavGroup Title="Settings" Icon="@Icons.Material.TwoTone.Settings" @bind-Expanded=_expandedSettingsMenu>
                    <MudNavLink Href="Manage/Categories" Match="NavLinkMatch.All" Icon="@Icons.Material.TwoTone.Category">Categories</MudNavLink>
                    <MudNavLink Href="Manage/Service-offers" Match="NavLinkMatch.All" Icon="@Icons.Material.TwoTone.HomeRepairService">Services</MudNavLink>
                    <MudNavLink Href="Account/Manage" Match="NavLinkMatch.All" Icon="@Icons.Material.TwoTone.ManageAccounts">Utilisateurs</MudNavLink>
                </MudNavGroup>
                <MudNavLink Href="Account/Register" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.Login">Register</MudNavLink>
                <MudNavLink Href="Account/Login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.TwoTone.Logout">Logout</MudNavLink>
            </NotAuthorized>
		</AuthorizeView>
	</MudNavMenu>
</MudPaper>

@code {
	bool _expandedServiceMenu = true;
    bool _expandedSettingsMenu = true;
}